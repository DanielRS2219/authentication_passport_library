<meta charset="UTF-8">
<title>Spoti Map</title>

<!-- CSS (load bootstrap from a CDN) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
<style>
  body { padding-top:50px; }
  .spotigreen{
      background-color: #1DB954;
      color: white;
      text-transform: uppercase;
  }
</style>

<div class="container">
    <h1 class="text-center mb-5">Register</h1>
    <div class="w-50 mx-auto" >
        <form id="miForm" action="/register" method="POST" onsubmit="return verificarPasswords();">
                <!-- Mensajes de Verificación -->
                <div id="error" class="alert alert-danger ocultar" role="alert" style="display: none">
                    Las Contraseñas no coinciden, vuelve a intentar !
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                    <label for="nickname" class="form-label">Nickname</label>
                    <input name="nickname" type="text" class="form-control" id="nickname" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password">
                </div>
                <div class="mb-3">
                    <label for="ComfirmPassword" class="form-label">Confirm your password</label>
                    <input name="ComfirmPassword" type="password" class="form-control" id="ComfirmPassword">
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-outline-success btn-lg fw-bold spotigreen">Register</button>
                </div>
            </form>
        </form>
        <div class="text-center">
            or <br>
            <a href="/login">Login</a>
        </div>
    </div>

<script>
    function verificarPasswords() {

        document.getElementById("error").classList.remove("mostrar");

        // Ontenemos los valores de los campos de contraseñas 
        pass1 = document.getElementById('password');
        pass2 = document.getElementById('ComfirmPassword');

        // Verificamos si las constraseñas no coinciden 
        if (pass1.value != pass2.value) {
    
            // Si las constraseñas no coinciden mostramos un mensaje 
            //document.getElementById("error").classList.add("mostrar");
            document.getElementById("error").style.display = "block";
    
            return false;
        } else {
    
            // Si las contraseñas coinciden ocultamos el mensaje de error
            document.getElementById("error").classList.remove("mostrar");
        
            return true;
        }
 
    }
</script>